{
  "compilerOptions": {
    "outDir": "./build/",
    "baseUrl": "src",
    "sourceMap": true,
    "strictNullChecks": true,
    "module": "esnext",
    "jsx": "react-jsx",
    "target": "es6",
    "allowJs": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noImplicitAny": true,
    "noImplicitThis": true
  },
  "include": [
    "./src/"
  ]
}
